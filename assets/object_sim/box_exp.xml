<mujoco>
    <!-- NOTE: geom size is the HALF-SIZE of the box in meters -->
    <!-- So the box's dimensions are: (w:x, l:y, h:z) = (0.1, 0.1, 0.3) -->
    <!-- And the box starts at z = 0.2 - 0.15 = 0.05 -->
    <body name="payload" pos="1 0 0.2">
        <joint name="payload:joint" type="free" damping="0.01"></joint>
        <geom name="payload" type="box" mass="0.635" size="0.05 0.05 0.15" material="block_mat" friction="0 0 0" 
            solref="0.0001 1.0"/>
             <!-- solimp="0.92 0.98 0.001 0.5 2.0"/>  -->
             <!-- margin="0.002"/> -->
            <!-- condim="3" solref="0.003, 1.0" solimp="0.9 0.95 0.001" margin="0.002"/> -->
         <!-- friction="1 0.005 0.0001"></geom> -->
        <site name="payload_site" pos="0 0 0" size="0.02 0.02 0.02" type="box" rgba="1 1 0 0"></site>
        <site name="frame_site" pos="0.05 0.05 -0.1" size="0.02 0.02 0.02" type="box" rgba="1 0 0 0"></site>
    </body>
</mujoco>